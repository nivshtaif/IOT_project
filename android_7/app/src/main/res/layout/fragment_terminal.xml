                    android:fontFamily="sans-serif-light"
                    android:text="Walk Counter"
                    android:textAlignment="textEnd"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!--View to display the line-->
            <View
