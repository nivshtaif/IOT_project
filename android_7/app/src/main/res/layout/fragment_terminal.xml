<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/walk_counter"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Walk Counter" />

    <TextView
        android:id="@+id/walk_timer"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Walk Timer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/run_counter"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Run Counter" />

        <TextView
            android:id="@+id/run_timer"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Run Timer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jump_counter"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Jump Counter" />

        <TextView
            android:id="@+id/jump_timer"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Jump Timer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/StartBtn"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp" />


        <Button
            android:id="@+id/SaveBtn"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="Save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="open CSV"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="Clear" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp">


    </LinearLayout>


    <TextView
        android:id="@+id/receive_text"
        android:layout_width="match_parent"
        android:layout_height="481dp"
        android:layout_weight="1"
        android:freezesText="true"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <View
        android:layout_width="match_parent"
        android:background="?android:attr/listDivider"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/send_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="text|textNoSuggestions"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_send_white_24dp" />
    </LinearLayout>


</LinearLayout>

